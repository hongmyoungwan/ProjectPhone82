<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.CartMapper">

	<select id="cartAllList" resultType="CartDTO">

		select
		num,userid,phone_model_num,phone_name,phone_price,phone_color,phone_amount,phone_image
		from cart
	</select>

	<update id="amountUpdate" parameterType="hashmap">
		update cart
		set phone_amount=#{phone_amount}
		where num=${num}

	</update>
	<delete id="deleteItem" parameterType="int">
		delete from cart
		where num=#{num}
	</delete>

	<select id="orderConfirm" parameterType="int" resultType="CartDTO">
		select
		num,userid,phone_model_num,phone_name,phone_price,phone_color,phone_amount,phone_image
		from cart
		where num=#{num}
	</select>
</mapper>





